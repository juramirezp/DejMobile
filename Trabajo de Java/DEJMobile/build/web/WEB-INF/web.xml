<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Vista.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>Vista.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreviaServlet</servlet-name>
        <servlet-class>Vista.PreviaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuardarServlet</servlet-name>
        <servlet-class>Vista.GuardarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarServlet</servlet-name>
        <servlet-class>Vista.CerrarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreviaServlet</servlet-name>
        <url-pattern>/PreviaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuardarServlet</servlet-name>
        <url-pattern>/GuardarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarServlet</servlet-name>
        <url-pattern>/CerrarServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
